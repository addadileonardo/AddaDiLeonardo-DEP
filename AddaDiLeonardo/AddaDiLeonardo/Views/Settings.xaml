<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AddaDiLeonardo.Views.Settings"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <RelativeLayout>
            
            <Picker Title="Seleziona una lingua" BackgroundColor="White" TextColor="Black" x:Name="LinguaPicker" SelectedIndex="{Binding Lingua}"
                    RelativeLayout.XConstraint="{ConstraintExpression
				    Type=RelativeToParent,
				    Property=Width,
				    Factor= 0,
                    Constant= 0 }"
                    RelativeLayout.YConstraint="{ConstraintExpression
				    Type=RelativeToParent,
				    Property=Height,
				    Factor=0.70 }"
                    RelativeLayout.WidthConstraint="{ConstraintExpression
                    Type=RelativeToParent,
                    Property=Width,
                    Factor=1}">
                <Picker.Items>
                    <x:String>Italiano</x:String>
                    <x:String>Inglese</x:String>
                    <x:String>Francese</x:String>
                </Picker.Items>
            </Picker>
            
        </RelativeLayout>
    </ContentPage.Content>
</ContentPage>